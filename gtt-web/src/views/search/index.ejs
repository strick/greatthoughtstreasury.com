
<div class="col-lg-12"><h1><%=title%></h1></div>
<%- //include('../partials/pagination.ejs', {page: 'quotes'}); %>
<% quotes.forEach(function(quote){ %>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">       
          <div class="card-body">          
            <p class="card-text"><%= quote.quote %></p>
            <p class="card-text"><% quote.topics.forEach(function(topic) { %><a href="/topics/single/<%=topic._id;%>"><%=topic.topic%></a> | <% });%></p>
          </div>
          <div class="card-footer">
            <a href="/authors/single/<%= quote.authorId %>" class="btn btn-primary">View Author</a>
          </div>
        </div>
      </div> 
    <% }) %>
    <%- //include('../partials/pagination.ejs', {page: 'quotes'}); %>