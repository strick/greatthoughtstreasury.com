
<div class="col-lg-12"><h1><%=title%></h1></div>
<%- //include('../partials/pagination.ejs', {page: 'quotes'}); %>
<% authors.forEach(function(author){ %>
  <div class="col-lg-12 col-md-12 mb-12">
      <div class="card h-100">       
        <div class="card-body">          
          <p class="card-text"><%= author.fullName %> </p>
          <div class="addthis_toolbox" addthis:url="http://greatthoughtstreasury.com/author/<%= author.slug %>">
            <%- include('../partials/addthis.ejs'); %>

          </div>
        
        </div>
        <div class="card-footer">
          <a href="/author/<%= author.slug %>" class="btn btn-primary">View Author</a>
        </div>
      </div>
    </div> 
  <% }) %>
<% quotes.forEach(function(quote){ %>
    <div class="col-lg-12 col-md-12 mb-12">
        <div class="card h-100">       
          <div class="card-body">          
            <p class="card-text"><%= quote.quote %></p>
            <div class="addthis_toolbox" addthis:url="http://greatthoughtstreasury.com/quotes/single/<%= quote._id %>">
              <%- include('../partials/addthis.ejs'); %>

            </div>
            <p class="card-text"><% quote.topics.forEach(function(topic) { %><a href="/topic/<%=topic.slug;%>"><%=topic.topic%></a> | <% });%></p>
          </div>
          <div class="card-footer">
            <a href="/author/<%= quote.authorId.slug %>" class="btn btn-primary"><%=quote.authorId.firstName + ' ' + quote.authorId.lastName;%></a>
          </div>
        </div>
      </div> 
    <% }) %>
    <%- //include('../partials/pagination.ejs', {page: 'quotes'}); %>