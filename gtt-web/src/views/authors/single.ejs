<div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100">
        <img class="card-img-top" src="https://gttfilestorage.blob.core.windows.net/public-content/images/<%=author.image%>" alt="">
        <div class="card-body">
            <h4 class="card-title"><%= author.firstName %> <%= author.lastName %></h4>            
            <p class="card-text"><%= author.bio %></p>
        </div>
    </div>
</div>
<div class="col-lg-9 col-md-6 mb-4">

    <%- include('../partials/pagination.ejs', {page: 'authors/single/' + author._id}); %>

    <div class="row text-center">

    <% author.quotes.forEach(function(quote){ %>
        <div class="col-lg-12 col-md-12 mb-12">
            <div class="card h-100">    
                <div class="card-body">
                    <p class="card-text">"<%=quote.quote%>"</p>      
                    <div class="addthis_toolbox" addthis:url="http://greatthoughtstreasury.com/quotes/single/<%= quote._id %>">
                        <%- include('../partials/addthis.ejs'); %>
          
                      </div>              
                </div>
                <div class="card-footer">
                    <a href="/quotes/related/<%= quote._id %>" class="btn btn-primary">View Similar</a>
                </div>
            </div>
        </div>
        <% }) %>    
    </div>
    <%- include('../partials/pagination.ejs', {page: 'authors/single/' + author._id}); %>

</div>