<div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100">
        <div class="card-body">
            <h4 class="card-title"><%= topic.topic %></h4>            
        </div>
    </div>
</div>
<div class="col-lg-9 col-md-6 mb-4">
    <%- include('../partials/pagination.ejs', {page: 'topics/single/' + topic._id}); %>        
    <div class="row text-center">
    <% topic.quotes.forEach(function(quote){ %>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">    
                <div class="card-body">
                    <p class="card-text">"<%=quote.quote%>"</p>                    
                </div>        
            </div>
        </div>
        <% }) %>    
    </div>
    <%- include('../partials/pagination.ejs', {page: 'topics/single/' + topic._id}); %>    
</div>